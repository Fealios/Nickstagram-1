@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Nickstagram.ViewModels.ViewUser

<h1>@Model.ViewedUser.UserName</h1>
<h3>Posts: @Model.PostCount </h3>
@Html.ActionLink("Add new Picture", "AddPost", new { id = @Model.CurrentUserId })

<div class="row">
    <ul class="post-list">
        @foreach (var post in Model.Posts)
        {
            <div class="col-md-4">
                <li>
                    <img src="@post.ImagePath" />
                    <h2>"@post.Description"</h2>
                    <h3>Likes: @post.Likes</h3>
                </li>

            </div>
        }
    </ul>
</div>
